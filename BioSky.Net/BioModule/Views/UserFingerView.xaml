            <Image Width="512" Height="289"
                   Source="{Binding Source={StaticResource ResourceLoader}, Path=HandsIconSource}" />

            <ItemsControl ItemsSource="{Binding FingerButtonsDictionary}" Panel.ZIndex="10">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Grid/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <RadioButton  Margin="{Binding Path=Value}" 
                                      HorizontalAlignment="Left" VerticalAlignment="Top" Tag="{Binding Path=Key}"
                                      Panel.ZIndex="10">
                            <RadioButton.IsChecked>
                                <MultiBinding Converter="{StaticResource MultiFingerToRadioButtonConverter}" Mode="TwoWay">
                                    <Binding RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=ItemsControl}" 
                                             Path="DataContext.SelectedFinger" Mode="TwoWay"/>
                                    <Binding RelativeSource="{RelativeSource Mode=Self}" Path="Tag" />
                                </MultiBinding>
                            </RadioButton.IsChecked>
                        </RadioButton>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            
