    <UserControl.Resources>
        <ResourceDictionary>
            <x:StaticExtension Member="resloader:ResourceLoader.Instance" x:Key="ResourceLoader"/>
            <utils:MultiFingerToRadioButtonConverter x:Key="MultiFingerToRadioButtonConverter"/>
            <Style TargetType="{x:Type RadioButton}" BasedOn="{StaticResource MetroRadioButton}">
                <Setter Property="Background" Value="Transparent"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Tag }" Value="true">
                        <Setter Property="Background" Value="#FF0C6303"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Viewbox >
        <Grid>
            <Grid.RowDefinitions>
