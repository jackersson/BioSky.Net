<UserControl x:Class="BioModule.Views.TrackControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"                     
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:vm="clr-namespace:BioModule.ViewModels"          
             xmlns:dragablz="clr-namespace:Dragablz;assembly=Dragablz"
             xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro" 
             xmlns:local="clr-namespace:BioModule.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance vm:TrackControlViewModel, IsDesignTimeCreatable=False}">

    <UserControl.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BoolToVis"></BooleanToVisibilityConverter>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Dragablz;component/Themes/Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="48"/>
            <RowDefinition Height="50*"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="64"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="48"/>
            <ColumnDefinition Width="48"/>
            <ColumnDefinition Width="48"/>

        </Grid.ColumnDefinitions>

        <Button  Style="{DynamicResource MetroCircleButtonStyle}" x:Name="button" Grid.Column="3" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="48" Height="48">
            <Image Source="{Binding AddIconSource}" Width="32" Height="32" />
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="Click">
                    <cal:ActionMessage MethodName="AddMenu" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Button>

        <Button Style="{DynamicResource MetroCircleButtonStyle}"
                Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                Grid.Column="4">
            <Image Source="{Binding RemoveIconSource}" Width="32" Height="32"  />
        </Button>

        <Button Style="{DynamicResource MetroCircleButtonStyle}" 
                Grid.Column="5" Grid.Row="0" HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch">
            <Image Source="{Binding DeleteIconSource}" Width="32" Height="32"  />
        </Button>

        <Controls:ToggleSwitch x:Name="Switch" Grid.Column="1" Grid.Row="0" 
                               HorizontalAlignment="Right" VerticalAlignment="Bottom"                                                           
                               OnLabel="All"
                               OffLabel="Selected" TextOptions.TextHintingMode="Animated"  />


        <ComboBox  Margin="2,5,0,0" Grid.Row="0"  Grid.Column="0" BorderThickness="1"
                   ItemsSource="{Binding TrackControlItems}" Grid.ColumnSpan="1">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Caption}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <WrapPanel Grid.ColumnSpan="2"  >

        </WrapPanel>

        <ListBox BorderThickness="0.8" ItemsSource="{Binding TrackControlItems}" 
                 Grid.Column="2"  Grid.Row="1" Grid.ColumnSpan="4"  Grid.RowSpan="2" Margin="2,0,0,0">
            <ListBox.Resources>
                <DataTemplate DataType="{x:Type vm:TrackControlItemViewModel}">
                    <local:TrackControlItemView Content="CurrentTrackLocation" DataContext="{Binding Mode=OneWay}"/>
                </DataTemplate>
            </ListBox.Resources>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <ContentControl  Content="{Binding ScreenViewModel}" Margin="2, 2, 5, 2" VerticalAlignment="Center">
                    </ContentControl>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <DataGrid x:Name="dataGrid" BorderThickness="1" 
                  Grid.ColumnSpan="2" Grid.Column="0" HorizontalAlignment="Stretch" 
                  Margin="2,1,0,0" Grid.Row="1"  Grid.RowSpan="2" VerticalAlignment="Stretch"/>

    </Grid>
</UserControl>
