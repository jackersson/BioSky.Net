<UserControl x:Class="BioModule.Views.TrackControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"                     
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:vm="clr-namespace:BioModule.ViewModels"          
             xmlns:dragablz="clr-namespace:Dragablz;assembly=Dragablz"
             xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro" 
             xmlns:local="clr-namespace:BioModule.Views"
             xmlns:utils="clr-namespace:BioModule.Utils"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"             
             mc:Ignorable="d" 
             Name="Test"
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance vm:TrackControlViewModel, IsDesignTimeCreatable=False}">

    <UserControl.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"></BooleanToVisibilityConverter>
            <utils:ConvertStatusToImage x:Key="ConvertTextToImage" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Dragablz;component/Themes/Generic.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.DataGrid.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

   
   
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="24"/>
            <RowDefinition Height="36"/>
            <RowDefinition Height="50*"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="56"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="48"/>
            <ColumnDefinition Width="48"/>
            <ColumnDefinition Width="48"/>

        </Grid.ColumnDefinitions>

        <GridSplitter Grid.Column="1"  Grid.Row="2" Grid.RowSpan="2" 
                      Width="2" Background="Gray"  ResizeDirection="Columns" ResizeBehavior="PreviousAndNext" Margin="0,2,0,0"/>
    

        <Button  Style="{DynamicResource MetroCircleButtonStyle}" x:Name="button" Grid.Column="3" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="48" Height="48">
            <Image Source="{Binding AddIconSource}" Width="32" Height="32" />
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="Click">
                    <cal:ActionMessage MethodName="AddMenu" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Button>

        <Button Style="{DynamicResource MetroCircleButtonStyle}"
                Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                Grid.Column="4">
            <Image Source="{Binding RemoveIconSource}" Width="32" Height="32"  />
        </Button>

        <Button Style="{DynamicResource MetroCircleButtonStyle}" 
                Grid.Column="5" Grid.Row="0" HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch">
            <Image Source="{Binding DeleteIconSource}" Width="32" Height="32"  />
        </Button>
        
        <ComboBox x:Name="LocationItems"
            Margin="2,5,0,0" Grid.Row="0"  Grid.Column="0" BorderThickness="1"
                   ItemsSource="{Binding TrackControlItems}" Grid.ColumnSpan="1"   
                  Controls:TextBoxHelper.Watermark="{Binding SelectedItems}"  
                  Controls:TextBoxHelper.UseFloatingWatermark="True"
                   >       
            <ComboBox.ItemTemplateSelector>
                <vm:ComboBoxItemTemplateSelector>
                    <vm:ComboBoxItemTemplateSelector.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" >
                                <CheckBox 
                                    IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                    cal:Action.TargetWithoutContext="{Binding ElementName=Test, Path=DataContext}"
                                    cal:Message.Attach="[Event Checked]=[Action OnChecked];
                                                        [Event Unchecked]=[Action OnChecked]"                       
                                                                    />
                                <TextBlock Text="{Binding Caption}"></TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </vm:ComboBoxItemTemplateSelector.ItemTemplate>
                    <vm:ComboBoxItemTemplateSelector.SelectedItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" >
                                <TextBlock  Text="{Binding ElementName=LocationItems, Path=DataContext.SelectedItems}"                                                                   
                                            VerticalAlignment="Center" 
                                            HorizontalAlignment="Center" ></TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </vm:ComboBoxItemTemplateSelector.SelectedItemTemplate>
                </vm:ComboBoxItemTemplateSelector>
            </ComboBox.ItemTemplateSelector>
        </ComboBox>
        
        
        <CheckBox VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="0" 
                  IsChecked="{Binding IsAllChecked}"
                  Margin="10,0,0,0"/>

        <TextBlock Text="All" VerticalAlignment="Center" HorizontalAlignment="Right"  Grid.Column="1" Grid.Row="0"
                   Margin="0,0,10,0"
                   >            
        </TextBlock>

        <TextBlock Grid.Column="0"  Grid.Row="1" 
                   Grid.ColumnSpan="2" Text="Notifications"
                   VerticalAlignment="Bottom"></TextBlock>

        <TextBlock Grid.Column="2"  Grid.Row="1" 
                   Grid.ColumnSpan="2" Text="Locations"
                   VerticalAlignment="Bottom"></TextBlock>

        <WrapPanel Grid.ColumnSpan="2"  >

        </WrapPanel>

        <ListBox BorderThickness="0.8" ItemsSource="{Binding TrackControlItems}" 
                 Grid.Column="2"  Grid.Row="2" Grid.ColumnSpan="4"  Grid.RowSpan="3" Margin="3,2,0,0">
            <ListBox.Resources>
                <DataTemplate DataType="{x:Type vm:TrackControlItemViewModel}">
                    <local:TrackControlItemView DataContext="{Binding Mode=OneWay}"/>
                </DataTemplate>
            </ListBox.Resources>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <ContentControl  Content="{Binding ScreenViewModel}" Margin="2, 2, 5, 2" VerticalAlignment="Center" MinHeight="128" MinWidth="64" MaxHeight="256" MaxWidth="Infinity">
                    </ContentControl>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
       <ContentControl Grid.Column="0" Grid.Row="2" 
                            Grid.RowSpan="2" Grid.ColumnSpan="2" Margin="0,2,5,0"
                        cal:View.Context="ShortedVisitors"                      
                        cal:View.Model="{Binding Notifications}">
        </ContentControl>
    </Grid>
</UserControl>
