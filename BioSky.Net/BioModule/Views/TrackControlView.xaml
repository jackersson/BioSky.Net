<UserControl x:Class="BioModule.Views.TrackControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"                     
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:vm="clr-namespace:BioModule.ViewModels"          
             xmlns:dragablz="clr-namespace:Dragablz;assembly=Dragablz"
             xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro" 
             xmlns:local="clr-namespace:BioModule.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance vm:TrackControlViewModel, IsDesignTimeCreatable=False}">

    <UserControl.Resources>       
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BoolToVis"></BooleanToVisibilityConverter>
            <vm:ComboBoxItemTemplateSelector x:Key="comboBoxItemTemplateSelector" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Dragablz;component/Themes/Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="24"/>
            <RowDefinition Height="36"/>
            <RowDefinition Height="50*"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="48"/>
            <ColumnDefinition Width="48"/>
            <ColumnDefinition Width="48"/>

        </Grid.ColumnDefinitions>
        
        <Button Style="{DynamicResource MetroCircleButtonStyle}" 
                Grid.Column="5" Grid.Row="0" HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch">
            <Image Source="{Binding DeleteIconSource}" Width="32" Height="32"  />
        </Button>


            <ComboBox Grid.Column="1" Grid.Row="0" Width="60"  Margin="0,0,0,0" 
                ItemsSource="{Binding ButtonItems}" 
          SelectedItem="{Binding SelectedActor}">
            <ComboBox.ItemTemplateSelector>
                <vm:ComboBoxItemTemplateSelector>
                    <vm:ComboBoxItemTemplateSelector.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}"/>                                                                  
                            </StackPanel>
                        </DataTemplate>
                    </vm:ComboBoxItemTemplateSelector.ItemTemplate>
                    <vm:ComboBoxItemTemplateSelector.SelectedItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" >
                                <CheckBox IsChecked="{Binding Value}" VerticalAlignment="Center" HorizontalAlignment="Center"></CheckBox>
                            </StackPanel>
                        </DataTemplate>
                    </vm:ComboBoxItemTemplateSelector.SelectedItemTemplate>
                </vm:ComboBoxItemTemplateSelector>
            </ComboBox.ItemTemplateSelector>
        </ComboBox>

        




        <ComboBox  Margin="2,5,0,0" Grid.Row="0"  Grid.Column="0" BorderThickness="1"
                   ItemsSource="{Binding TrackControlItems}" Grid.ColumnSpan="1">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Caption}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <TextBlock Grid.Column="0"  Grid.Row="1" 
                   Grid.ColumnSpan="2" Text="Notifications"
                   VerticalAlignment="Bottom"></TextBlock>

        <TextBlock Grid.Column="2"  Grid.Row="1" 
                   Grid.ColumnSpan="2" Text="Locations"
                   VerticalAlignment="Bottom"></TextBlock>

        <WrapPanel Grid.ColumnSpan="2"  >

        </WrapPanel>

        <ListBox BorderThickness="0.8" ItemsSource="{Binding TrackControlItems}" 
                 Grid.Column="2"  Grid.Row="2" Grid.ColumnSpan="4"  Grid.RowSpan="3" Margin="2,0,0,0">
            <ListBox.Resources>
                <DataTemplate DataType="{x:Type vm:TrackControlItemViewModel}">
                    <local:TrackControlItemView DataContext="{Binding Mode=OneWay}"/>
                </DataTemplate>
            </ListBox.Resources>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <ContentControl  Content="{Binding ScreenViewModel}" Margin="2, 2, 5, 2" VerticalAlignment="Center" MinHeight="128" MinWidth="64" MaxHeight="256" MaxWidth="Infinity">
                    </ContentControl>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <DataGrid x:Name="dataGrid" BorderThickness="1" 
                  Grid.ColumnSpan="2" Grid.Column="0" HorizontalAlignment="Stretch" 
                  Margin="2,1,0,0" Grid.Row="2"  Grid.RowSpan="3" VerticalAlignment="Stretch"/>

    </Grid>
</UserControl>
