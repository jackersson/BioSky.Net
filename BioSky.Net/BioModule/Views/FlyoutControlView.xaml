<Controls:FlyoutsControl x:Class="BioModule.Views.FlyoutControlView"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                         xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                         xmlns:vm="clr-namespace:BioModule.ViewModels"
                         xmlns:local="clr-namespace:BioModule.Views"
                         xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                         mc:Ignorable="d" 
                         d:DesignHeight="300" d:DesignWidth="300"
                         d:DataContext="{d:DesignInstance vm:FlyoutControlViewModel, IsDesignTimeCreatable=False}">
   
      <Controls:FlyoutsControl.Resources>
        <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
            <local:SettingsView x:Name="CurrentFlyoutPage"></local:SettingsView>
         </DataTemplate>
      </Controls:FlyoutsControl.Resources>
    
      <Controls:Flyout Header="{Binding CurrentFlyoutPage.Caption}" Theme="Dark" Position="Right"
                       IsOpen="{Binding FlyoutOpenState}"  Width="200" >
          <Grid>
            <ContentControl Content="{Binding CurrentFlyoutPage.ScreenViewModel}"></ContentControl>
          </Grid>
       </Controls:Flyout>
    
</Controls:FlyoutsControl>
