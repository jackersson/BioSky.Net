<UserControl x:Class="BioModule.Views.UserContactlessCardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BioModule.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="31*"/>
            <ColumnDefinition Width="48"/>
            <ColumnDefinition Width="48"/>
            <ColumnDefinition Width="48"/>
        </Grid.ColumnDefinitions>
        <Button  HorizontalAlignment="Left" Margin="49,0,0,0" VerticalAlignment="Top" Width="48" Height="48" Grid.ColumnSpan="3" Grid.Column="1" Style="{DynamicResource MetroCircleButtonStyle}">
            <Image Source="{Binding Ts}" Height="32" Width="32" />
        </Button>
        <Button HorizontalAlignment="Left" Margin="2,0,0,0" VerticalAlignment="Top" Width="48" Height="48" Grid.Column="3" Style="{DynamicResource MetroCircleButtonStyle}">
            <Image Source="{Binding Ts}" Height="32" Width="32" />
        </Button>
        <ListBox HorizontalAlignment="Left" Height="237" Margin="0,3,0,0" VerticalAlignment="Top" Width="300" Grid.ColumnSpan="4" Grid.Row="1"/>
        <Button HorizontalAlignment="Left" Margin="1,0,0,0" VerticalAlignment="Top" Width="48" Height="48" Grid.Column="1" Style="{DynamicResource MetroCircleButtonStyle}">
            <Image Source="{Binding Ts}" Height="32" Width="32" />
        </Button>
        <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="124" Margin="27,3,0,0" Height="19"/>
        <Image Height="22" VerticalAlignment="Top" Source="pack://siteoforigin:,,,/Resources/ok.png" Margin="0,0,133,0"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="0,25,0,0" TextWrapping="Wrap" Text="Card Number" VerticalAlignment="Top" Width="151" Grid.RowSpan="2"/>
    </Grid>
</UserControl>
