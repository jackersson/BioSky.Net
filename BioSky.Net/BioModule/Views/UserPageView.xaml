<UserControl x:Class="BioModule.Views.UserPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:BioModule.ViewModels"
             xmlns:local="clr-namespace:BioModule.Views"
             xmlns:resloader="clr-namespace:BioModule.ResourcesLoader"
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:utils="clr-namespace:BioModule.Utils"
             xmlns:bioContracts="clr-namespace:BioContracts;assembly=BioContracts"
             xmlns:lex="http://wpflocalizeextension.codeplex.com"
             xmlns:gray="clr-namespace:GrayscaleEffect;assembly=GrayscaleEffect"       
             lex:LocalizeDictionary.DesignCulture=""
             lex:ResxLocalizationProvider.DefaultAssembly="BioModule"
             lex:ResxLocalizationProvider.DefaultDictionary="lang"
             mc:Ignorable="d" Background="#FF1E1E1E"
             d:DesignHeight="400" d:DesignWidth="400"
             d:DataContext="{d:DesignInstance vm:UserPageViewModel, IsDesignTimeCreatable=False}"
             >

    <UserControl.Resources>
        <ResourceDictionary>
            <x:StaticExtension Member="resloader:ResourceLoader.Instance" x:Key="ResourceLoader"/>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <utils:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.xaml"/>
                <ResourceDictionary>
                    <Style TargetType="{x:Type TabItem}" BasedOn="{StaticResource MetroTabItem}">
                        <Setter Property="IsEnabled" Value="{Binding IsEnabled}"/>                       
                    </Style>
                    <Style x:Key="GreyScaleImage" TargetType="Image">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding RelativeSource=
                                   {RelativeSource Mode=FindAncestor, AncestorType=Button}, Path=IsEnabled }" Value="false">
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <gray:GrayscaleEffect></gray:GrayscaleEffect>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
           
        </ResourceDictionary>        
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.ColumnSpan="2" Name="Detailed"
            Visibility="{Binding CurrentPhotoImageView.IsExpanded, Converter={StaticResource InverseBooleanConverter}}" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="48"/>
                <ColumnDefinition Width="48"/>
                <ColumnDefinition Width="48"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="64"/>
                <RowDefinition Height="48"/>
                <RowDefinition Height="48"/>
                <RowDefinition Height="48"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="48"/>
            </Grid.RowDefinitions>

            <TabControl Grid.Column="0" Grid.RowSpan="5" HorizontalAlignment="Stretch" 
                    VerticalAlignment="Stretch" 
                    ItemsSource="{Binding Items, UpdateSourceTrigger=PropertyChanged}" Grid.ColumnSpan="10"                
                    SelectedItem="{Binding ActiveItem}"
                    cal:Message.Attach="[Event SelectionChanged]=[Action OpenTab]"
                    Style="{StaticResource MetroTabControl}"
                    >
                <TabControl.Resources>
                    <DataTemplate DataType="{x:Type vm:UserInformationViewModel}">
                        <local:UserInformationView x:Name="ActiveItem"></local:UserInformationView>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vm:UserContactlessCardViewModel}">
                        <local:UserContactlessCardView x:Name="ActiveItem" DataContext="{Binding Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"></local:UserContactlessCardView>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vm:UserPhotoViewModel}">
                        <local:UserPhotoView x:Name="ActiveItem" DataContext="{Binding Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"></local:UserPhotoView>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vm:UserFingerViewModel}">
                        <local:UserFingerView x:Name="ActiveItem" DataContext="{Binding Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"></local:UserFingerView>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vm:UserIrisViewModel}">
                        <local:UserIrisView x:Name="ActiveItem" DataContext="{Binding Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"></local:UserIrisView>
                    </DataTemplate>
                </TabControl.Resources>
                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Background="Transparent">
                            <lex:LocProxy Source="{Binding DisplayName}" x:Name="Proxy" PrependType="False" />
                            <TextBlock Text="{Binding Result, ElementName=Proxy}" />
                        </Grid>
                    </DataTemplate>
                </TabControl.ItemTemplate>
                <TabControl.ContentTemplate>
                    <DataTemplate>
                        <ContentControl Content="{Binding}" ></ContentControl>
                    </DataTemplate>
                </TabControl.ContentTemplate>

            </TabControl>

            <Button  Grid.Row="5" Grid.Column="1" Name="ApplyButton"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
                 ToolTip="{lex:Loc Save}"                  
                 cal:Message.Attach="[Event Click]=[Action Apply]"
                 Style="{DynamicResource MetroCircleButtonStyle}" 
                 Tag="{x:Static bioContracts:Activity.UserAdd}">
                <Button.IsEnabled>
                    <MultiBinding Converter="{x:Static utils:ConverterInitializer.MultiPermissionToVisibilityConverter}">
                        <Binding Source="{x:Static utils:PermissionControllerHolder.PermissionController}" Path="CurrentPermissionRights"/>
                        <Binding Path="CanApply"/>
                        <Binding ElementName="ApplyButton" Path="Tag"/>
                    </MultiBinding>
                </Button.IsEnabled>
                <Image Width="24" Height="24" Source="{Binding Source={StaticResource ResourceLoader}, Path=OkIconSource}" Style="{StaticResource GreyScaleImage}" />
            </Button>

            <Button ToolTip="{lex:Loc RevertChanges}" 
                Grid.Row="5" Grid.Column="2" HorizontalAlignment="Stretch"
                IsEnabled="{Binding CanRevert}"
                VerticalAlignment="Stretch"  Style="{DynamicResource MetroCircleButtonStyle}" 
                cal:Message.Attach="[Event Click] = [Action Revert]"
                >
                <Image Width="24" Height="24" Source="{Binding Source={StaticResource ResourceLoader}, Path=RefreshIconSource}" Style="{StaticResource GreyScaleImage}" />
            </Button>

            <Button ToolTip="{lex:Loc DeleteUser}" Grid.Row="5" Grid.Column="4" Name="DeleteButton"
                cal:Message.Attach="[Event Click]=[Action Remove]"                
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  
                Style="{DynamicResource MetroCircleButtonStyle}" 
                Tag="{x:Static bioContracts:Activity.UserRemove}">
                <Button.IsEnabled>
                    <MultiBinding Converter="{x:Static utils:ConverterInitializer.MultiPermissionToVisibilityConverter}">
                        <Binding Source="{x:Static utils:PermissionControllerHolder.PermissionController}" Path="CurrentPermissionRights"/>
                        <Binding Path="CanDelete"/>
                        <Binding ElementName="DeleteButton" Path="Tag"/>
                    </MultiBinding>
                </Button.IsEnabled>
                <Image Width="24" Height="24" Source="{Binding Source={StaticResource ResourceLoader}, Path=DeleteIconSource}" Style="{StaticResource GreyScaleImage}" />
            </Button>

        </Grid>
        


      

        <ContentControl Grid.Column="0" Name="ImageView"
                        HorizontalAlignment="Stretch"  Margin="0,0,0,5"
                        VerticalAlignment="Stretch"                     
                        Grid.RowSpan="6"                                  
                        >
            <ContentControl.Style>
                <Style TargetType="ContentControl">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding CurrentPhotoImageView.IsExpanded}" Value="True">
                            <Setter Property="Grid.ColumnSpan" Value="2" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>
            <local:BioImageView DataContext="{Binding CurrentPhotoImageView}"></local:BioImageView>
        </ContentControl>
    </Grid>
</UserControl>
