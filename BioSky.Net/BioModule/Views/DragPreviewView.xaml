<UserControl x:Class="BioModule.Views.DragPreviewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:BioModule.ViewModels"
             xmlns:local="clr-namespace:BioModule.Views"
             xmlns:dd="clr-namespace:BioModule.DragDrop"             
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance vm:DragPreviewViewModel, IsDesignTimeCreatable=False}"
             
             >
  

    <Grid Name="grid">
        <TextBlock Text="{Binding SelectedItem.DisplayName}" 
                   HorizontalAlignment="Stretch" TextWrapping="Wrap"
                   VerticalAlignment="Stretch" />
    </Grid>
    
</UserControl>
